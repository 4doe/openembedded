+/* uses uartc base address is 0xb0400b00, offset 0x80 for tx, 0x84 for int */
+static void micom_send_data(const u8 *data, u8 count)
+{
+	u8 i;
+
+	for(i = 0; i < count; i++)
+	{
+#if 0
